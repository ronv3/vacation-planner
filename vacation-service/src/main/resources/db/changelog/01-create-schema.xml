<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="0" author="ron">
        <dropTable tableName="vacation_request"/>
    </changeSet>

    <changeSet id="1" author="ron">
        <createTable tableName="vacation_request">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="employee_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="vacation_start" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="vacation_end" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="comment" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="submitted_at" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>